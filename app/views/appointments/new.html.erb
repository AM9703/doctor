<div class="row gx-3 gy-2 align-items-center  border border-1 mt-5 mx-auto">
  <h1>Take Appointment</h1>
  <%= form_with model: @appointment do |form|%>
    <div class="form-group">
      <%= form.label :date %><br>
      <%= form.date_field :date, class: "form-control form-control-lg", required: true%><br>
    </div>
    
    <div class="form-group">
      <%= form.label :time %><br>
      <%= form.time_field :time, class: "form-control form-control-lg", required: true%><br>
    </div>
    
    <div class="form-group mt-0">
      <%= form.hidden_field :doctor_id, value: @doctor_id %>
      <%= form.hidden_field :status, value: 'pending' %>    
    </div>

    <div class="form-group">
      <%=form.submit class: "btn btn-primary btn" %>
    </div>

    <div class="form-group mt-2 mb-2 ">    
    <%=link_to 'Back',root_path ,class:"btn btn-primary"%>
    </div>    
  <%end%>
</div>
