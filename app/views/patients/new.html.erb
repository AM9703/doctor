<div class="row gx-3 gy-2 align-items-center  border border-1 mt-5 mx-auto">
  <h1>Patient's</h1>
  <%= form_with model: @patient do |form|%>
    <%if @patient.errors.any?%>
      <%@patient.errors.full_messages.each do |message|%>
        <p><%=message%></p>
      <%end%>
    <%end%>
    <div class=" mt-2">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control ", required: true%>
    </div>

    <div class=" mt-2">
      <%= form.label :age %>
      <%= form.number_field :age, class: "form-control ", required: true%>
    </div>

    <div class=" mt-3 ">
      <%= form.label :gender%>
      <%= form.select :gender,["male","female","other"], class: "form-control ", required: true %>
    </div>

    <div class=" ">
      <%= form.hidden_field :user_id, value: @user_id %>
    </div>

    <div class=" mt-2 mb-2">
      <%=form.submit class: "btn btn-primary btn"%>
    </div>
  <%end%>
</div>
    
  