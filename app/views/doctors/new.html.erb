<div class="row gx-3 gy-2 align-items-center  border border-1 mt-5 mx-auto">
  <h1>Doctor</h1>
  <%= form_with model: @doctor do |form|%>
    <%if @doctor.errors.any?%>
    <%@doctor.errors.full_messages.each do |message|%>
        <p><%=message%></p>
      <%end%>
    <%end%>
    <div class="form-group">
      <%= form.label :name %><br>
      <%= form.text_field :name, class: "form-control form-control-lg ", required: true%><br>
    </div>

    <div class="form-group">
      <%= form.label :specialization %><br>
      <%= form.text_field :specialization, class: "form-control form-control-lg", required: true%><br>
    </div>

    <div class="form-group">
      <%= form.label :fees%><br>
      <%= form.number_field :fees, class: "form-control form-control-lg" , required: true%><br>
    </div>
    
    <div class="form-group">
      <%= form.label :start_time %><br>
      <%= form.time_field :start_time, class: "form-control form-control-lg", required: true %><br>
    </div>

    <div class="form-group">
      <%= form.label :end_time %><br>
      <%= form.time_field :end_time, class: "form-control form-control-lg", required: true %><br>
    </div>

    <div>
      <%= form.hidden_field :user_id, value: @user_id %>
    </div>

    <div class="form-group mt-0 mb-2">
      <%=form.submit class: "btn btn-primary btn" %>
    </div>    
  <%end%>
</div>
