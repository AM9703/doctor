<h1>Doctor</h1>
<%= form_with model: @doctor do |form|%>
  <%if @doctor.errors.any?%>
    <%@doctor.errors.full_messages.each do |message|%>
      <p><%=message%></p>
    <%end%>
  <%end%>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name%><br>
  </div>
  <div>
    <%= form.label :specialization %><br>
    <%= form.text_field :specialization%><br>
  </div>
  <div>
    <%= form.label :fees%><br>
    <%= form.number_field :fees %><br>
  </div>
  
  <div>
    <%= form.label :start_time %><br>
    <%= form.time_field :start_time %><br>
  </div>
  <div>
    <%= form.label :end_time %><br>
    <%= form.time_field :end_time %><br>
  </div>
  <div>
    <%= form.hidden_field :user_id, value: @user_id %>
  </div>
  <div>
    <%=form.submit%>
  </div>
<%end%>