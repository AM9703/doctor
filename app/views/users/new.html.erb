<div class="row gx-3 gy-2 align-items-center  border border-1 mt-5 mx-auto">
  <h1>User's</h1> 
  <%= form_with model: @user do |form|%>
    <div class="text-danger ">
      <%if @user.errors.any?%>
        <%@user.errors.full_messages.each do |message|%>
          <p><%=message%></p>
        <%end%>
      <%end%>
    </div>  
    <div class="form-group mt-2 col-6">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control form-control-lg",autofocus: true,require:true %>
    </div>
    <div class="form-group mt-2 col-6">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control form-control-lg"%>
    </div>
    <div class="form-group mt-2 col-6">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control form-control-lg"%>
    </div>
    <div class="form-group mt-3 col-6">
      <%= form.label :role%>
      <%= form.select :role,["patient" , "doctor"],  class: "form-control form-control-lg" %>
    </div>
    <div class="form-group mt-4">
      <%=form.submit class: "btn btn-primary btn"%>
    </div>
  <%end%>
</div>
